<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketPro.Views.CameraPermissions">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource Container}">
            <Label Text="Permissions Required" Style="{StaticResource HeaderText}"/>
            <Label Text="Camera and storage access is required for PocketPro to function." TextColor="White"/>
            <Button VerticalOptions="EndAndExpand" Text="Request Permissions" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>