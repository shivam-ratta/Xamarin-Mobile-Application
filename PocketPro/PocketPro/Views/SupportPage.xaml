<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PocketPro.ViewModels"
             x:Class="PocketPro.Views.SupportPage"
             Title="Support">
    <StackLayout HorizontalOptions="FillAndExpand" Style="{StaticResource Container}">
        <Label Text="Support" Style="{x:StaticResource HeaderText}" />
        <Button Text="Watch Tutorial" Clicked="WatchTutorial_Clicked" x:Name="WatchTutorial" />
        <Button Text="Help Forum"/>
        <Button Text="Contact Support" Clicked="ContactSupport_Clicked" x:Name="ContactSupport"/>
        <Button Text="Rate This App" Clicked="RateThisApp_Clicked" x:Name="RateThisApp" />
    </StackLayout>
</ContentPage>